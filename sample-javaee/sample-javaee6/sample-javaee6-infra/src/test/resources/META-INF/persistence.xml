<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" 
	xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
	http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="test-sample-app">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
            <class>org.debugroom.sample.javaee6.domain.model.entity.Address</class>
            <class>org.debugroom.sample.javaee6.domain.model.entity.AddressPK</class>
            <class>org.debugroom.sample.javaee6.domain.model.entity.Company</class>
            <class>org.debugroom.sample.javaee6.domain.model.entity.Credential</class>
            <class>org.debugroom.sample.javaee6.domain.model.entity.CredentialPK</class>
            <class>org.debugroom.sample.javaee6.domain.model.entity.Email</class>
            <class>org.debugroom.sample.javaee6.domain.model.entity.EmailPK</class>
            <class>org.debugroom.sample.javaee6.domain.model.entity.Phone</class>
            <class>org.debugroom.sample.javaee6.domain.model.entity.PhonePK</class>
            <class>org.debugroom.sample.javaee6.domain.model.entity.User</class>
            <class>org.debugroom.sample.javaee6.domain.model.entity.UserPK</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/sample-app" />
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
            <property name="hibernate.connection.username" value="app" />
            <property name="hibernate.connection.password" value="app" />
            <property name="hibernate.show_sql" value="true" />
        </properties>
	</persistence-unit>
</persistence>
