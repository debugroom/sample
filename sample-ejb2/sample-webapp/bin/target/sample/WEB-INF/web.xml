<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>sample-webapp</display-name>
    <servlet>
      <servlet-name>ejbclient</servlet-name>
      <servlet-class>org.debugroom.sample.ejb2.app.web.local.SampleEJBClient</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>ejbclient</servlet-name>
      <url-pattern>/ejbclient</url-pattern>
    </servlet-mapping>

    <ejb-local-ref>
      <ejb-ref-name>ejb/SampleSessionBean</ejb-ref-name>
      <ejb-ref-type>Session</ejb-ref-type>
      <local-home>org.debugroom.sample.ejb2.domain.sample.local.SampleHome</local-home>
      <local>org.debugroom.sample.ejb2.domain.sample.local.Sample</local>
      <ejb-link>SampleSessionBean</ejb-link>
    </ejb-local-ref>
    <ejb-local-ref>
       <ejb-ref-name>ejb/CompanyEntityBean</ejb-ref-name>
       <ejb-ref-type>Entity</ejb-ref-type>
       <local-home>org.debugroom.sample.ejb2.domain.sample.local.CompanyHome</local-home>
       <local>org.debugroom.sample.ejb2.domain.sample.local.Company</local>
    </ejb-local-ref>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
